unit menuPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TMenuPrincipalForm = class(TForm)
    Button1: TButton;

    procedure Button1Click(Sender: TObject);
  private
    var
    Usuario: String;
  public
    constructor Create(AOwner: TComponent; user:String);
  end;

var
  MenuPrincipalForm: TMenuPrincipalForm;

implementation

{$R *.dfm}

procedure TMenuPrincipalForm.Button1Click(Sender: TObject);
begin
  ShowMessage(Usuario);
end;

constructor  TMenuPrincipalForm.Create(AOwner: TComponent; user: string);
begin
    inherited Create(AOwner);
     Usuario := user;

end;

end.
